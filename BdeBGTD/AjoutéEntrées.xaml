<Window x:Class="BdeBGTD.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BdeBGTD"
        mc:Ignorable="d"
        Title="BdeB GTD" Height="500" Width="500">
    <Grid>
        <TextBlock Text="Ajouts à la boîte d'entrées" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />

        <TextBlock Text="Nom de l'élément:" FontSize="12"  Margin="10,45,0,0" />
        <StackPanel>
            <TextBox x:Name="saisieNom" Width="350" Height="15" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70,46,0,0"/>
            <TextBox x:Name="saisieDescription" Width="495" Height="300" Margin="0,5,0,95"/>
            <DockPanel>
                <CheckBox >

                </CheckBox>
                <TextBlock Text="Garder cette fenêtre ouverte" FontSize="12" Margin="5,0,0,0"> </TextBlock>
            </DockPanel>
        </StackPanel>
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Confirmer" Width="150" Height="20" Margin="30,0,60,90"/>
            <Button Content="Annuler" Width="150" Height="20" Margin="30,0,60,90"/>
        </DockPanel>
    </Grid>
</Window>
